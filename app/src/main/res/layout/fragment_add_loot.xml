<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:src="@drawable/ic_minus"
        android:id="@+id/btnCountMinus"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_toStartOf="@+id/txtEatCount"
        android:background="@drawable/btn_style"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtEatCount"
        android:layout_centerHorizontal="true"
        tools:text="3"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:maxLength="1"
        android:layout_toStartOf="@+id/btnCountPlus"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:src="@drawable/ic_plus"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnCountPlus"
        android:background="@drawable/btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAddingEatPrice"
        tools:text="2000"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtPriceValuteInfo"
        android:text="@string/rubles"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/txtAddingEatPrice"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/btnCountPlus"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCloseDialog"
            android:background="@drawable/btn_style"
            android:text="@string/close"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddToLoot"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>